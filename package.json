{
  "name": "hero-patterns",
  "version": "1.2.1",
  "description": "Patterns from heropatterns.com exported as ES6 functions",
  "main": "hero-patterns.js",
  "scripts": {
    "start": "yarn run browser_sync & NODE_ENV=development nodemon --exec 'yarn run build && browser-sync reload'",
    "browser_sync": "browser-sync start --server dist --no-ui --no-notify",
    "build": "rollup -c -m && postcss site/main.css -o dist/bundle.css -c",
    "build:min": "cross-env NODE_ENV=production yarn run build && purifycss dist/bundle.css dist/index.html dist/bundle.js --out dist/bundle.css --min --info",
    "lint-staged": "lint-staged",
    "precommit": "lint-staged"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lowmess/hero-patterns.git"
  },
  "author": "Alec Lomas",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^6.7.7",
    "babel": "^6.23.0",
    "babel-preset-env": "^1.2.2",
    "babel-preset-es2015-rollup": "^3.0.0",
    "browser-sync": "^2.18.8",
    "cross-env": "^3.2.4",
    "css-mqpacker": "^5.0.1",
    "cssnano": "^3.10.0",
    "cz-conventional-changelog": "^1.2.0",
    "eslint": "^3.19.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-node": "^4.2.2",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "fs-extra": "^2.1.2",
    "husky": "^0.13.3",
    "lint-staged": "^3.4.0",
    "nodemon": "^1.11.0",
    "postcss": "^5.2.16",
    "postcss-cli": "^3.0.0",
    "postcss-custom-media": "^5.0.1",
    "postcss-custom-properties": "^5.0.2",
    "postcss-import": "^9.1.0",
    "postcss-nested": "^1.0.0",
    "prettier": "^1.1.0",
    "purifycss": "^1.1.9",
    "random-a11y-combo": "^1.0.0",
    "randomcolor": "^0.4.4",
    "rollup": "^0.41.6",
    "rollup-plugin-alias": "^1.2.1",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-plugin-babili": "^2.0.0",
    "rollup-plugin-commonjs": "^8.0.2",
    "rollup-plugin-json": "^2.1.0",
    "rollup-plugin-node-resolve": "^2.0.0",
    "stylefmt": "^5.3.2",
    "stylelint": "^7.9.0",
    "stylelint-config-lowmess": "^0.1.0",
    "tachyons": "^4.6.2"
  },
  "browserlist": [
    "last 2 versions",
    "> 5%"
  ],
  "stylelint": {
    "extends": "stylelint-config-lowmess"
  },
  "eslintConfig": {
    "extends": "standard"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --single-quote --semi false --write",
      "git add"
    ],
    "*.css": [
      "stylefmt",
      "stylelint",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
